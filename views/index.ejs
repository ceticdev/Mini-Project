<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog App</title>
    <link href="https://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
  </head>

  <div class="container mt-4">
    <h1 class="text-center mb-4">Blog Posts</h1>
    <a href="/new" class="btn btn-primary mb-3">Create New Post</a>
    <div class="row">
      <% posts.forEach(post => { %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title"><%= post.title %></h2>
              <p class="card-text"><%= post.content.substring(0, 150) %>...</p>
              <p class="text-muted">By <%= post.author %> on <%= post.date %></p>
              <a href="/edit/<%= post.id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/delete/<%= post.id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>